@using University.Models;
@* @model List<University.Models.Course>; *@

<div class="container">
  <h2>Courses</h2>
  <div class="container content">
    @if (@Model.Count == 0)

    {
      <p>There are no Courses yet registered.</p>
    }
    else
    {
      <ul>
        @foreach (Course course in Model)
        {
          <li>
            @Html.ActionLink($"{course.CourseName}", "Details", "Courses", new { id = course.CourseId }, new { @class = "btn btn-primary" })
          </li>
        }
      </ul>
    }
  </div>
  @Html.ActionLink("Create New Course", "Create", "Courses", null, new { @class = "btn btn-primary" })
</div>
