@model University.Models.Course;

<div class="container-fluid">
  <h3 class="pt-5 pb-3">Add a course</h3>
  <div class="container content">
    <p>Add a course here:</p>
    @using (Html.BeginForm())
    {
      @Html.LabelFor(model => model.CourseName)
      @Html.TextBoxFor(model => model.CourseName)

      @Html.LabelFor(model => model.CourseDescription)
      @Html.TextBoxFor(model => model.CourseDescription)

      <input type="submit" class="btn btn-block btn-primary" value="Add new course" />
    }

  </div>
</div>
