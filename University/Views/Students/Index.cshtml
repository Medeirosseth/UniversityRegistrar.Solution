

@using University.Models;

<div class="container">
  <h2>Students</h2>
  <div class="container content">
    @if (@Model.Count == 0)

    {
      <p>There are no Students yet registered.</p>
    }
    else
    {
      <ul>
        @foreach (Student student in Model)
        {
          <li>
            @Html.ActionLink($"{student.Name}", "Details", "Students", new { id = student.StudentId }, new { @class = "btn btn-primary" })
          </li>
        }
      </ul>
    }
  </div>
  @Html.ActionLink("Add new student", "Create", "Students", null, new { @class = "btn btn-primary" })
</div>
